# MongoDB Configuration (Free M0 tier is sufficient)
MONGODB_URI=
MONGODB_DB_NAME=investment_research

# ChromaDB Configuration (local vector database)
CHROMA_PERSIST_DIR=./data/chroma
CHROMA_COLLECTION_NAME=investment_docs

# OpenAI API (for embeddings and LLM inference)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o  # Options: gpt-4o, gpt-4o-mini, gpt-4-turbo
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# News API (optional - for financial news aggregation)
NEWS_API_KEY=...

# Yahoo Finance (optional - free tier available, premium requires API key)
YAHOO_FINANCE_API_KEY=

# SEC EDGAR Configuration
SEC_EDGAR_USER_AGENT=YourCompanyName your.email@example.com

# Application Settings
ENVIRONMENT=development
LOG_LEVEL=INFO
API_HOST=0.0.0.0
API_PORT=8000

# Session Management
SESSION_EXPIRE_MINUTES=30
SESSION_SECRET_KEY=your-secret-key-change-in-production

# WebSocket Settings
WS_HEARTBEAT_INTERVAL=30

# Alert System
ALERT_CHECK_INTERVAL=60  # seconds
